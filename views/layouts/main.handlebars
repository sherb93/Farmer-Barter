<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Farmer Barter</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <a href="/">Farmer Barter</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if loggedIn}}
        <a href="/offers">profile</a> |
        <button class="no-button" id="logout">logout</button>
        <button class="no-button" id="view-offers-button">View all offers</button>
        <button class="no-button" id="view-requests-button">View all requests</button>
        <button class="no-button" id="create-request">Create request</button>
        <button class="no-button" id="create-offer">Create offer</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
